{
  "name": "@bcss/react-components",
  "version": "0.1.0",
  "main": "./lib/main.js",
  "module": "./lib/main.js",
  "types": "./lib/main.d.ts",
  "files": [
    "lib"
  ],
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "bootstrap": "^5.1.3",
    "luxon": "^2.1.1",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.3",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build": "tsc -p tsconfig.json && yarn copy-files",
    "copy-files": "copyfiles -u 1 \"src/components/**/*.css\" \"src/components/**/*.svg\" \"src/components/**/*.json\" lib/",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "prebuild": "rimraf lib",
    "release": "npm run build && npm run publish-ci",
    "publish-ci": "npm publish --registry https://nexus.mgmt.texasplatform.uk/repository/bcss-npm-private",
    "local-components": "npm link ../components",
    "latest-components": "npm unlink --no-save @bcss/react-components && npm install @bcss/react-components"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.4.7",
    "@storybook/addon-essentials": "^6.4.7",
    "@storybook/addon-links": "^6.4.7",
    "@storybook/node-logger": "^6.4.7",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.4.7",
    "@types/luxon": "^2.0.7",
    "@types/react-lottie": "1.2.6",
    "copyfiles": "^2.4.1",
    "react-lottie": "^1.2.3",
    "react-unhook": "^0.4.1",
    "rimraf": "^3.0.2"
  }
}
